{
  "name": "ModusToolBox",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "VARIANT": "stable",
      "TARGET": "CY8CPROTO-062-4343W"
    }
  },
  "workspaceFolder": "/home/vscode/mtb-workspace",
  "customizations": {
    "vscode": {
      "extensions": [
        "arm.device-manager",
        "arm.embedded-debug",
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-themes"
      ],
      "settings": {
        "remote.extensionKind": {
          "arm.device-manager": [
            "ui"
          ],
          "arm.embedded-debug": [
            "ui"
          ]
        }
      }
    }
  },
  "forwardPorts": [
    3000
  ]
}